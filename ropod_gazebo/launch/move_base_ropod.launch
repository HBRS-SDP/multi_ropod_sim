<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="robot_name" default="robot1"/>  

    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find ropod_gazebo)/config/move_base_config/$(arg robot_name)/costmap_common_params.yaml"
                  command="load" ns="global_costmap" />
        <rosparam file="$(find ropod_gazebo)/config/move_base_config/$(arg robot_name)/costmap_common_params.yaml"
                  command="load" ns="local_costmap" />    

        <rosparam file="$(find ropod_gazebo)/config/move_base_config/$(arg robot_name)/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find ropod_gazebo)/config/move_base_config/$(arg robot_name)/local_costmap_params.yaml"  command="load"/>    

        <rosparam file="$(find ropod_gazebo)/config/move_base_config/base_local_planner_params.yaml" command="load" />

        <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS" />

        <remap from="cmd_vel" to="/$(arg robot_name)/cmd_vel"/>
        <remap from="odom" to="/$(arg robot_name)/odom"/>
        <remap from="/move_base_simple/goal" to="/$(arg robot_name)/move_base_simple/goal"/>
    </node>
</launch>
