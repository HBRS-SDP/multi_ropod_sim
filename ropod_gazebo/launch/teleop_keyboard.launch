<?xml version="1.0"?>
<launch>
    <arg name="robot_id" default="1"/>

    <node pkg="turtlebot_teleop" type="turtlebot_teleop_key" name="robot$(arg robot_id)_keyboard_teleop"  output="screen">
        <param name="scale_linear" value="0.5" type="double"/>
        <param name="scale_angular" value="1.5" type="double"/>
        <remap from="robot$(arg robot_id)_keyboard_teleop/cmd_vel" to="robot$(arg robot_id)/cmd_vel"/>
    </node>
</launch>
