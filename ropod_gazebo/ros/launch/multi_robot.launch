<?xml version="1.0"?>
<launch>

    <env name="GAZEBO_RESOURCE_PATH" value="$(find ropod_gazebo)/common/resources/:$(optenv GAZEBO_MODEL_PATH)"/>
    <env name="GAZEBO_MODEL_PATH" value="$(find ropod_gazebo)/common/models:$(optenv GAZEBO_MODEL_PATH)"/>

    <!-- MAP PARAMS -->
    <arg name="map_file" default="$(find topological_map_ros)/maps/brsu-full/map.yaml" />
    <!-- offset between gazebo world origin and map origin -->
    <arg name="map_offset_x" default="0" />
    <arg name="map_offset_y" default="0" />
    <arg name="map_offset_theta" default="0" />
    <arg name="start_move_base" default="true"/>
    <arg name="world" default="brsu_topological_map"/>
    <arg name="paused" default="false"/>
    <arg name="use_sim_time" default="true"/>
    <arg name="gui" default="false"/>
    <arg name="debug" default="false"/>
    <arg name="start_rviz" default="true"/>

    <!-- Load the world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find ropod_gazebo)/common/worlds/$(arg world).world"/> 
        <arg name="debug" value="$(arg debug)" />
        <arg name="gui" value="$(arg gui)" />
        <arg name="paused" value="$(arg paused)"/>
        <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    </include>

    <!-- Instantiate the robots -->
    <include file="$(find ropod_gazebo)/ros/generated_files/spawn_multiple_robots.launch" >
        <arg name="map_offset_x" value="$(arg map_offset_x)" />
        <arg name="map_offset_y" value="$(arg map_offset_y)" />
        <arg name="map_offset_theta" value="$(arg map_offset_theta)" />
        <arg name="start_move_base" value="$(arg start_move_base)"/>
    </include>

    <node pkg="ropod_gazebo" name="odom_tf_pub" type="ros_frame_pub" respawn="true" output="screen" />

    <!-- Run the map server -->
    <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" >
        <param name="frame_id" value="/map" />
    </node>

    <group if="$(arg start_rviz)">
   <!-- rviz for visualisation-->
        <node pkg="rviz" type="rviz" name="rviz" args="-d $(find ropod_gazebo)/ros/generated_files/multi_ropod_sim.rviz" />
    </group>

</launch>
