<?xml version="1.0"?>
<launch>
    <arg name="robot_id" default="ropod_001"/>

    <node pkg="turtlebot_teleop" type="turtlebot_teleop_key" name="$(arg robot_id)_keyboard_teleop" 
          output="screen">
        <param name="scale_linear" value="0.5" type="double"/>
        <param name="scale_angular" value="1.5" type="double"/>
        <remap from="$(arg robot_id)_keyboard_teleop/cmd_vel" to="$(arg robot_id)/cmd_vel"/>
    </node>
</launch>
